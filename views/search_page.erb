<div id = "fancy">
Would you like to update or delete?
</div>
<div id = "box">
<form method = "post" action = "update">

<%unless search_answer == "Need search term" ||search_answer ==  "isnt in phone book" %>
	<table width = 100%>
		<tr>
			<th>Select</th>
			<th>First</th>
			<th>Last</th>
			<th>Address</th>
			<th>City</th>
			<th>State</th>
			<th>Zip</th>
			<th>Phone</th>
		</tr>
		<%search_answer.each do |row|%>
		<%woo = row.join(",")%>
			<tr>
			<td><input type = "checkbox" name = "info[]" value = "<%=woo%>"></td> 
				<%row.each do |item| %>
					<td><%=item%></td>
				<%end%>
			</tr>
		<br>
		<%end%>
	</table>
<%else%>

<%=search_answer%>
<%end%>
<input type = "radio" name = "choose" value = "update" checked>update
<input type = "radio" name = "choose" value = "delete">delete<br>
<input type = "submit" value = "enter">
</form>
</div>